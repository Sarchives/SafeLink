{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "indent": ["error", 4],
      "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }],
      "no-console": "warn"
    },
    "globals": {
      "__basedir": false
    }
  }